<%- include('./partials/header') %>

<div id="cart-container">
    <% if (!user.cart || user.cart.length === 0) { %>
        <div class="w-full h-screen flex items-center justify-center">
            <h2 class="text-3xl font-semibold text-gray-600">ðŸ›’ Your cart is empty</h2>
        </div>
    <% } else { %>
        <% user.cart.forEach(function(item, index){ %>
            <div id="cart-item-<%= index %>" class="w-full flex items-start px-20 py-20 gap-10">
                
                <!-- Product Section -->
                <div class="w-[30%] rounded-md overflow-hidden">
                    <div class="w-full flex justify-center items-center h-80" style="background-color: <%= item.bgcolor %>">
                        <img class="h-[20rem]" src="data:image/jpeg;base64,<%= item.image.toString('base64') %>" alt="">
                    </div>
                    <div class="w-full flex justify-between px-5 py-4" style="background-color: <%= item.panelcolor %>">
                        <h3 class="text-2xl"><%= item.name %></h3>
                        <div class="flex items-center gap-2">
                            <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line cursor-pointer qty-increase" data-index="<%= index %>"></i>
                            <div id="qty-<%= index %>" class="px-2 py-1 rounded-md bg-white text-black"><%= item.quantity || 1 %></div>
                            <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line cursor-pointer qty-decrease" data-index="<%= index %>"></i>
                        </div>
                    </div>
                    <div class="flex items-center justify-between px-5 py-3" style="background-color: <%= item.textcolor %>">
                        <h4 class="text-lg">Net Total :-</h4>
                        <h2 id="net-total-<%= index %>" class="text-lg">â‚¹ <%= bills[index] %></h2>
                    </div>
                </div>

                <!-- Price breakdown -->
                <div class="w-[70%]">
                    <h3 class="text-xl">Price Breakdown</h3>
                    <div class="px-10 mt-5">
                        <div class="flex mt-2">
                            <h4 class="w-1/3">Total MRP</h4>
                            <h4 id="mrp-<%= index %>">â‚¹ <%= item.price %></h4>
                        </div>
                        <div class="flex mt-2">
                            <h4 class="w-1/3">Discount on MRP</h4>
                            <h4 id="discount-<%= index %>">â‚¹ <%= Number(item.discount) %></h4>
                        </div>
                        <div class="flex mt-2">
                            <h4 class="w-1/3">Platform Fee</h4>
                            <h4>â‚¹ 20</h4>
                        </div>
                        <div class="flex mt-2">
                            <h4 class="w-1/3">Shipping Fee</h4>
                            <h4>FREE</h4>
                        </div>
                    </div>
                    <div class="w-full h-[1px] bg-black mt-10"></div>
                    <div class="flex mt-5">
                        <h3 class="w-1/3 text-xl">Total Amount</h3>
                        <h3 id="total-<%= index %>" class="font-semibold text-xl text-green-600"><%= bills[index] %></h3>
                    </div>
                </div>

            </div>
        <% }) %>
    <% } %>
</div>

<script>
document.addEventListener("DOMContentLoaded", () => {

    // Handle Increase
    document.querySelectorAll(".qty-increase").forEach(btn => {
        btn.addEventListener("click", () => {
            const index = btn.dataset.index;
            updateQuantity(index, 1);
        });
    });

    // Handle Decrease
    document.querySelectorAll(".qty-decrease").forEach(btn => {
        btn.addEventListener("click", () => {
            const index = btn.dataset.index;
            const qtyElem = document.getElementById(`qty-${index}`);
            let qty = parseInt(qtyElem.textContent);

            if (qty > 1) {
                updateQuantity(index, -1);
            } else {
                removeItem(index);
            }
        });
    });

    // Update Quantity
    function updateQuantity(index, change) {
        const qtyElem = document.getElementById(`qty-${index}`);
        let qty = parseInt(qtyElem.textContent);
        qty = Math.max(1, qty + change);
        qtyElem.textContent = qty;

        const price = parseFloat(document.getElementById(`mrp-${index}`).textContent.replace("â‚¹", "").trim());
        const discount = parseFloat(document.getElementById(`discount-${index}`).textContent.replace("â‚¹", "").trim());
        const total = (price - discount + 20) * qty;

        document.getElementById(`net-total-${index}`).textContent = "â‚¹ " + total;
        document.getElementById(`total-${index}`).textContent = total;

        fetch(`/cart/update-quantity/${index}`, {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ quantity: qty })
        });
    }

    // Remove Item
    function removeItem(index) {
        fetch(`/cart/remove/${index}`, { method: "DELETE" })
        .then(res => res.json())
        .then(data => {
            if (data.empty) {
                document.getElementById("cart-container").innerHTML = `
                    <div class="w-full h-screen flex items-center justify-center">
                        <h2 class="text-3xl font-semibold text-gray-600">ðŸ›’ Your cart is empty</h2>
                    </div>
                `;
            } else {
                const itemElem = document.getElementById(`cart-item-${index}`);
                if (itemElem) itemElem.remove();
            }
        });
    }

});
</script>

<%- include('./partials/footer') %>
